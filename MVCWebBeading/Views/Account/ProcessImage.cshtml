@model MVCWebBeading.Models.SendImageViewModel
@{
    ViewBag.Title = "Загрузить на обработку";
}
<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ProcessImage", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <h4>Задайте параметры обработки.</h4>
    <hr />
    <fieldset>
        <div class="form-group">
            @Html.LabelFor(m => m.BixelWidth, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.BixelWidth, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.BixelHeight, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.BixelHeight, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.WaysOfColorDefinition, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownList("SelectListWithWays", TempData["SelectList"] as SelectList)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.File, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.File, new { type = "file" })
                @Html.ValidationMessageFor(x => x.File)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PaletteDescription, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.PaletteDescription, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Загрузить на обработку" />
            </div>
        </div>

    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
